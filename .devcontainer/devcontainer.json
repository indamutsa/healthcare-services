{
	"name": "Alpine",
	"image": "mcr.microsoft.com/devcontainers/base:alpine-3.20",
	
	"runArgs": [
		"--privileged",
		"--hostname=healthcare"
	],
	
	"mounts": [
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	
	"workspaceFolder": "/workspaces/clinical-trials-service",
	
	"postCreateCommand": "apk add docker docker-compose zsh git curl && chsh -s /bin/zsh",
	
	"remoteUser": "root"
}